{% extends 'base.html.twig' %}

{% block title %}Charge-IT - Statii{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    h1 {text-align: center; }
    #filterForm {text-align: center;}
</style>
<div class="fluid-container">
    <h1>✅ Statiile de incarcare ✅</h1>
    <div id="filterForm">
        {{ form(formFilter) }}
    </div>
    <div class="alert alert-success">
        <p>Da click pe butonul "Rezerva" din dreptul unei statii pentru a o rezerva.</p>
    </div>
    <table class="table table-striped table-hover">
        <thead class="thead-dark">
        <tr>
            <th scope="col">#id</th>
            <th scope="col">Locatie</th>
            <th scope="col">Oras</th>
            <th scope="col">Putere</th>
            <th scope="col">Tip de incarcare</th>
            <th scope="col"></th>
        </tr>
        </thead>
            <tbody>
            {% for station in stations %}
                <tr>
                    <th scope="row">{{ station.id }}</th>
                    <td>{{ station.location.name }}</td>
                    <td>{{ station.location.city }}</td>
                    <td>{{ station.power }} kW</td>
                    <td>{{ station.chargetype }}</td>
                    <td>
                        <a href="{{ station.id ~ url }}" class="button button--link"> Rezerva </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
    </table>

</div>
{% endblock %}
